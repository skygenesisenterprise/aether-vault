# Environment Configuration Example
# Copy this file to .env and update with your values

# GitHub App Configuration (Required)
GITHUB_APP_ID=12345
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your-super-secret-webhook-key
GITHUB_INSTALLATION_ID=12345678

# Vault Configuration (Required)
VAULT_ENDPOINT=http://localhost:3000
VAULT_API_KEY=your-vault-api-key
VAULT_TIMEOUT=30000

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Scanner Configuration (Optional)
SCANNER_ENABLED_FILE_TYPES=.js,.ts,.jsx,.tsx,.py,.go,.rs,.java,.php,.yml,.yaml,.json,.env,.config,.sh,.bash
SCANNER_EXCLUDED_PATHS=node_modules,.git,dist,build,vendor,.next
SCANNER_SECRET_PATTERNS={"aws-access-key":"AKIA[0-9A-Z]{16}","aws-secret-key":"[A-Za-z0-9/+=]{40}"}
SCANNER_CONFIDENCE_HIGH=0.9
SCANNER_CONFIDENCE_MEDIUM=0.7
SCANNER_CONFIDENCE_LOW=0.5

# Policy Configuration (Optional)
POLICY_AUTO_COMMENT=true
POLICY_BLOCK_ON_CRITICAL=false
POLICY_REQUIRE_APPROVAL_ON_HIGH=true
POLICY_NOTIFICATION_CHANNELS=email,slack